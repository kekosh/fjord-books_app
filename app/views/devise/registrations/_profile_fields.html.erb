<div class="field">
  <%= f.label :name %>
  <%= f.text_field :name %>
</div>

<div class="field">
  <%= f.label :icon %>
  <%= f.file_field :icon %>
</div>
<div>
  <% if @user.icon.attached? && @user.icon.attachment.blob.present? && @user.icon.attachment.blob.persisted? %>
    <%= image_tag @user.icon.variant(resize: '30x30'), style:'border-radius:50%;' %>
  <% else %>
    <p>アイコン未設定</p>
  <% end %>
</div>

<div class="field">
  <%= f.label :postal_code %>
  <%= f.text_field :postal_code %>
</div>

<div class="field">
  <%= f.label :address %>
  <%= f.text_field :address %>
</div>

<div class="field">
  <%= f.label :self_introduction %>
  <%= f.text_area :self_introduction %>
</div>
