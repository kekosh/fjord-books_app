<h1><%= t('views.common.header.Followers') %></h1>

<table>
    <thead>
        <tr>
            <th><%= User.human_attribute_name(:avatar) %></th>
            <th><%= User.human_attribute_name(:name) %></th>
            <th><%= User.human_attribute_name(:email) %></th>
        </tr>
    </thead>

    <tbody>
        <% @users.each do |user| %>
        <tr>
            <td>
                <% if user.avatar.attached? %>
                    <%= image_tag user.avatar.variant(resize_to_fill: [30, 30]) %>
                <% end %>
            </td>
            <td><%= user.name %></td>
            <td><%= user.email %></td>
        </tr>
        <% end %>
    </tbody>
</table>

<%= link_to t('views.common.back'), user_path(params[:user_id]) %>
