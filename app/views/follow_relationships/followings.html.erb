<h1><%= t('views.common.header.Followings') %></h1>

<table>
    <thead>
        <tr>
            <th><%= User.human_attribute_name(:avatar) %></th>
            <th><%= User.human_attribute_name(:name) %></th>
            <th><%= User.human_attribute_name(:email) %></th>
        </tr>
    </thead>

    <tbody>
        <% @users.each do |user| %>
        <tr>
            <td>
                <% if user.avatar.attached? %>
                    <%= image_tag user.avatar.variant(resize_to_fill: [30, 30]) %>
                <% end %>
            </td>
            <td><%= user.name %></td>
            <td><%= user.email %></td>
            <% if current_user.id.to_s == params[:user_id].to_s %>
                <td>
                    <%= link_to t('views.common.items.UnFollow'), user_follow_relationships_path(user.id), method: :delete, style: 'background-color:red; color:white; border-radius:20px; padding:5px; margin-left:10px;' %>
                </td>
            <% end %>
        </tr>
        <% end %>
    </tbody>
</table>

<%= link_to t('views.common.back'), user_path(params[:user_id]) %>
